#include <stdio.h>
#include <stdlib.h>
#include <math.h>
double area (int r)
{
    return (3.14159*r*r*2);
}
double perimeter (int r)
{
    return (3.14159*r*2);
}


int main()
{
    int r;
    printf ("Enter the radius:");
    scanf ("%d",&r);
    double a,p;
    p=perimeter(r);
    a=area(r);
    printf ("The perimeter is :%.2lf \nThe area is:%.2lf",p,a);
    return 0;
}
